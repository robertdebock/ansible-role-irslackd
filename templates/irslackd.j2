#!/bin/sh
{{ ansible_managed | comment }}
#
#	/etc/init.d/irslackd
#
# chkconfig: 2345 20 80
# description: A self-hosted IRC gateway to Slack

# Source function library.
if [ -f /etc/init.d/functions ] ; then
  . /etc/init.d/functions
fi

start() {
  echo -n "Starting irslackd: "
  returncode=$({{ irslackd_dest }}/irslackd > /dev/null 2>&1 &)
  return ${returncode}
}

stop() {
  echo -n "Shutting down irslackd: "
  returncode=$(killall irslackd)
  return ${returncode}
}

status() {
  returncode=$(pgrep irslackd > /dev/null 2>&1)
  if [ "${returncode}" = 0 ] ; then
    status=running
  else
    status=stopped
  fi
  echo "irslackd is ${status}"
  return ${returncode}
}

case "$1" in
  start)
    start
  ;;
  stop)
    stop
  ;;
  status)
    status
  ;;
  restart)
    stop
    start
  ;;
  reload)
    echo "not supported."
  ;;
  *)
    echo "Usage: <servicename> {start|stop|status|restart|reload}"
    exit 1
  ;;
esac

exit $?
