{{ ansible_managed | comment }}
[Unit]
Description=A self-hosted IRC gateway to Slack

[Service]
Type=simple
WorkingDirectory={{ irslackd_dest }}
ExecStart={{ irslackd_dest }}/irslackd -p {{ irslackd_port }} -a {{ irslackd_address }}
ExecStop=/usr/bin/killall irslackd

[Install]
WantedBy=multi-user.target
